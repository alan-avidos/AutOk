<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="EditTextHint" parent="Widget.Design.TextInputLayout">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/colorAppOrange</item>
        <item name="android:colorControlNormal">@color/colorAppWhiteText</item>
        <item name="android:colorControlActivated">@color/colorAppOrange</item>
        <item name="android:colorControlHighlight">@color/colorAppWhiteText</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout" />

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
