<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity"
    android:background="@drawable/background">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="15%"
                    android:background="@color/colorAppOrange"
                    android:layout_alignParentTop="true"
                    android:text="@string/app_name"
                    android:textColor="@color/colorAppWhiteText"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/user"
                    android:theme="@style/EditTextHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="75%"
                    app:layout_heightPercent="11%"
                    app:layout_marginTopPercent="5%"
                    android:layout_below="@+id/header"
                    android:layout_centerHorizontal="true"
                    android:baselineAligned="false">

                    <AutoCompleteTextView
                        android:id="@+id/email"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/prompt_email"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:ellipsize="start"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="21sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorAppOrange"
                        android:background="@drawable/rounded_border"
                        android:layout_weight="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passwrd"
                    android:theme="@style/EditTextHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="75%"
                    app:layout_heightPercent="11%"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"
                    android:baselineAligned="false"
                    android:layout_below="@id/user"
                    app:passwordToggleEnabled="false">

                    <EditText
                        android:id="@+id/password"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:hint="@string/prompt_password"
                        android:textSize="21sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:ellipsize="start"
                        android:imeActionId="@+id/login"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:textColor="@color/colorAppOrange"
                        android:background="@drawable/rounded_border"
                        android:maxLines="1"
                        android:layout_weight="1"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/email_sign_in_button"
                    android:layout_below="@id/passwrd"
                    style="?android:textAppearanceSmall"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_border_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="75%"
                    app:layout_heightPercent="10%"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/action_sign_in"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/forgot_password_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_sign_in_button"
                    android:textSize="21sp"
                    android:paddingBottom="30dp"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="@color/colorAppOrange"
                    android:text="@string/forgot_password"/>

                <ImageView
                    android:id="@+id/image_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="100%"
                    app:layout_heightPercent="20%"
                    app:layout_marginTopPercent="10%"
                    app:layout_marginBottomPercent="2%"
                    android:src="@drawable/loginimg"
                    android:layout_below="@+id/email_sign_in_button" />


            </android.support.percent.PercentRelativeLayout>
    </LinearLayout>
</LinearLayout>
